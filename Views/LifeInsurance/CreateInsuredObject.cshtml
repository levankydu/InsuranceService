@using test0000001.Extensions;
@using test0000001.Models.LifeInsurance
@model test0000001.Models.DTO.LifeInsurance.InsuredObjectDto

@{
    ViewData["Title"] = "Package registering";
    var package = ViewBag.Package as test0000001.Models.Policy;
}

@section Css {
    <style>
        .my-page-header {
            background-image: linear-gradient(45deg, rgba(255,255,255,1) 0%, rgba(255,255,255,0.65) 70%, rgba(255,255,255,0.3) 100%), url('/@package?.Image');
            background-color: #fff;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
}

<!-- Page Header Start -->
<div class="container-fluid page-header my-page-header py-5 mb-5 wow fadeIn"
     data-wow-delay="0.1s">
    <div class="container py-5">
        <h1 class="display-4 animated slideInDown mb-4">Package Registering</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/LifeInsurance">Life Insurance</a></li>
                <li class="breadcrumb-item"><a href="/LifeInsurance/@package?.Slug">@package?.Name</a></li>
                <li class="breadcrumb-item active" aria-current="#">Package registering</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Service Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto" style="max-width: 500px">
            <h1 class="display-6 mb-5">
                Step 1 out of 3
            </h1>
        </div>
        <div class="row g-4 justify-content-center">
            <div class="col-12 wow fadeInUp" data-wow-delay="0.1s">
                <div class="service-item rounded h-100 p-5">
                    <div class="d-flex align-items-center ms-n5 mb-4">
                        <div class="service-icon flex-shrink-0 bg-primary rounded-end me-4">
                            @* <img class="img-fluid"
                            src="~/@item.Image" style="width: 80px; height: auto; border-radius: 5%;"
                            alt="@item.Name" /> *@
                        </div>
                        <h4 class="mb-0 text-uppercase">General Information</h4>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-10">
                            <form action="/LifeInsurance/@package?.Slug/PackageRegister"
                                  method="post">
                                <div class="row">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="form-group col-lg-6 mt-3">
                                        <label asp-for="@Model.PolicyHolder.StartDay" class="control-label">Intended effective date of the package</label>
                                        <input type="date" asp-for="@Model.PolicyHolder.StartDay" class="form-control" />
                                        <span asp-validation-for="@Model.PolicyHolder.StartDay" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-lg-12 mt-3">
                                        <label asp-for="@Model.InsuredObject.InsuredRelation" class="control-label"></label>
                                        <br />
                                        @foreach (var item in (InsuredRelation[])Enum.GetValues(typeof(InsuredRelation)))
                                        {
                                            <div class="form-check form-check-inline">
                                                <input type="radio"
                                                       asp-for="@Model.InsuredObject.InsuredRelation"
                                                       id="InsuredRelation-@item"
                                                       value="@item"
                                                       class="form-check-input" />
                                                <label for="InsuredRelation-@item"
                                                       class="form-check-label text-capitalize me-2">@item.GetDisplayName()</label>
                                            </div>
                                        }
                                        <br />
                                        <span asp-validation-for="@Model.InsuredObject.InsuredRelation" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-lg-6 mt-3">
                                        <label asp-for="@Model.InsuredObject.InsuredRelationDetail" class="control-label"></label>
                                        <input asp-for="@Model.InsuredObject.InsuredRelationDetail" class="form-control" />
                                        <span asp-validation-for="@Model.InsuredObject.InsuredRelationDetail" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-lg-12 mt-3">
                                        <label asp-for="@Model.InsuredObject.Name" class="control-label"></label>
                                        <input asp-for="@Model.InsuredObject.Name" class="form-control" />
                                        <span asp-validation-for="@Model.InsuredObject.Name" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-lg-4 mt-3">
                                        <label asp-for="@Model.InsuredObject.PID" class="control-label"></label>
                                        <input asp-for="@Model.InsuredObject.PID"
                                               class="form-control"
                                               placeholder="CID or Birth Certificate No." />
                                        <span asp-validation-for="@Model.InsuredObject.PID" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-lg-3 mt-3">
                                        <label asp-for="@Model.InsuredObject.PidIssueDate" class="control-label"></label>
                                        <input type="date" asp-for="@Model.InsuredObject.PidIssueDate" class="form-control" />
                                        <span asp-validation-for="@Model.InsuredObject.PidIssueDate" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-lg-5 mt-3">
                                        <label asp-for="@Model.InsuredObject.PidIssuePlace" class="control-label"></label>
                                        <input asp-for="@Model.InsuredObject.PidIssuePlace" class="form-control" />
                                        <span asp-validation-for="@Model.InsuredObject.PidIssuePlace" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-lg-6 mt-3">
                                        <label asp-for="@Model.InsuredObject.DateOfBirth" class="control-label"></label>
                                        <input type="date" asp-for="@Model.InsuredObject.DateOfBirth" class="form-control" />
                                        <span asp-validation-for="@Model.InsuredObject.DateOfBirth" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-lg-12 mt-3">
                                        <label asp-for="@Model.InsuredObject.Gender" class="control-label"></label>
                                        <br />
                                        @foreach (var item in (Gender[])Enum.GetValues(typeof(Gender)))
                                        {
                                            <div class="form-check form-check-inline">
                                                <input type="radio"
                                                       asp-for="@Model.InsuredObject.Gender"
                                                       id="Gender-@item"
                                                       value="@item"
                                                       class="form-check-input" />
                                                <label for="Gender-@item"
                                                       class="form-check-label text-capitalize me-2">@item</label>
                                            </div>
                                        }
                                        <br />
                                        <span asp-validation-for="@Model.InsuredObject.Gender" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-lg-12 mt-3">
                                        <label asp-for="@Model.InsuredObject.MaritalStatus" class="control-label"></label>
                                        <br />
                                        @foreach (var item in (MaritalStatus[])Enum.GetValues(typeof(MaritalStatus)))
                                        {
                                            <div class="form-check form-check-inline">
                                                <input type="radio"
                                                       asp-for="@Model.InsuredObject.MaritalStatus"
                                                       id="MaritalStatus-@item"
                                                       value="@item"
                                                       class="form-check-input" />
                                                <label for="MaritalStatus-@item"
                                                       class="form-check-label text-capitalize me-2">@item</label>
                                            </div>
                                        }
                                        <br />
                                        <span asp-validation-for="@Model.InsuredObject.MaritalStatus" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-lg-6 mt-3">
                                        <label asp-for="@Model.InsuredObject.Email" class="control-label"></label>
                                        <input asp-for="@Model.InsuredObject.Email" class="form-control" />
                                        <span asp-validation-for="@Model.InsuredObject.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-lg-6 mt-3">
                                        <label asp-for="@Model.InsuredObject.Phone" class="control-label"></label>
                                        <input asp-for="@Model.InsuredObject.Phone" class="form-control" />
                                        <span asp-validation-for="@Model.InsuredObject.Phone" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mt-3">
                                        <label asp-for="@Model.InsuredObject.Address" class="control-label"></label>
                                        <input asp-for="@Model.InsuredObject.Address" class="form-control" />
                                        <span asp-validation-for="@Model.InsuredObject.Address" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mt-5">
                                        <a class="btn btn-outline-primary px-3" href="/LifeInsurance/@package?.Slug">Back</a>
                                        <input type="submit" value="Next" class="btn btn-primary px-3" />
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Service End -->
@section JS {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function addDays(date, days) {
            date.setDate(date.getDate() + days);
            return date;
        }

        $.validator.addMethod('startdate', function (value, element, params) {
            return new Date(value) > addDays(new Date(), 3);    //it's valid if it's a future date
        });

        $.validator.unobtrusive.adapters.add('startdate', function (options) {
            options.rules['startdate'] = [];
            options.messages['startdate'] = options.message;
        });

        $.validator.addMethod('notFutureDate', function (value, element, params) {
            return new Date(value) <= new Date();    //it's valid if it's not a future date
        });

        $.validator.unobtrusive.adapters.add('notFutureDate', function (options) {
            options.rules['notFutureDate'] = [];
            options.messages['notFutureDate'] = options.message;
        });

    </script>
}