@using test0000001.Helpers;
@model IEnumerable<test0000001.Models.Policy>

@{
    ViewData["Title"] = "Life Insurance";
}

@section Css {
    <style>
        .my-service-item {
            background: rgb(255,255,255);
            background-size: cover;
        }
    </style>
}


<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn"
     data-wow-delay="0.1s">
    <div class="container py-5">
        <h1 class="display-4 animated slideInDown mb-4">Life Insurance</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="/LifeInsurance">Life Insurance</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Service Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto" style="max-width: 500px">
            <h1 class="display-6 mb-5">
                Please pick up one Life Insurance package that most suited for you
            </h1>
        </div>
        <div class="row g-4 justify-content-center">

            @foreach (var item in Model)
            {

                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="service-item rounded h-100 p-5 my-service-item"
                         style="background-image: linear-gradient(45deg, rgba(255,255,255,1) 0%, rgba(255,255,255,0.85) 75%, rgba(255,255,255,0.5) 100%), url('/@item.Image');">
                        <div class="d-flex align-items-center ms-n5 mb-4">
                            <div class="service-icon flex-shrink-0 bg-primary rounded-end me-4">
                                @* <img class="img-fluid"
                                     src="~/@item.Image" style="width: 80px; height: auto; border-radius: 5%;"
                                     alt="@item.Name" /> *@
                            </div>
                            <h4 class="mb-0">@item.Name</h4>
                        </div>
                        <p class="mb-4">
                            @Html.Raw(Html.GetShortDescription(item.Description))
                        </p>
                        <a class="btn btn-light px-3" href="/LifeInsurance/@item.Slug">Read More</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Service End -->