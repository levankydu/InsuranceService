@model IEnumerable<test0000001.Models.DTO.HomeInsurance.Home_Insurance>

@{
    ViewData["Title"] = "Index";
    Layout = "AdminLayout/_Layout";
}


<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>List Home Insurance</h3>
                <p class="text-subtitle text-muted">
                    All Home Insurance Profile is here
                </p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb"
                     class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-action="Display" asp-controller="Admin">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            List Home Insurance
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <!-- Basic Tables start -->
    <section class="section">
        <div class="card">
            <div class="card-header"> Home Insurance</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table" id="table1">
                        <thead>
                            <tr>
                                <th>Address</th>
                                <th>YearBuilt</th>
                                <th>Structure</th>
                                <th>NumberOfBasement</th>
                                <th>Area</th>
                                <th>Photo</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Address</td>
                                    <td>@item.YearBuilt</td>
                                    <td>@item.Structure</td>
                                    <td>@item.NumberOfBasement</td>
                                    <td>@item.Area</td>
                                    <td>
                                        @if (item.Photos.Count() > 0)
                                        {
                                            @foreach (var photo in item.Photos)
                                            {
                                                @if (photo.Id >= 0)
                                                {
                                                    <img src="@photo.PhotoUrl" width="110" />
                                                }
                                            }
                                        }
                                    </td>
                                    <td class="border-bottom-0">
                                        <div class="d-flex align-items-center gap-2">
                                            <a class="btn btn-warning" asp-route-id="@item.Id" asp-action="Detail" asp-controller="HomeInsurance">
                                                Detail
                                            </a>
                                           @* <form asp-action="Delete" asp-controller="HomeInsurance">
                                                <input type="hidden" name="id" value="@item.Id">
                                                <button type="submit" class="btn btn-danger">
                                                    Delete
                                                </button>
                                            </form>*@
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <!-- Basic Tables end -->
</div>