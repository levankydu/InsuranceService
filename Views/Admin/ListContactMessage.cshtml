@model IEnumerable<test0000001.Models.GuestMessage>

@{
    ViewData["Title"] = "List Message";
    Layout = "AdminLayout/_Layout";
}


<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>List Contact Message</h3>
                <p class="text-subtitle text-muted">
                    All Message is here 
                </p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb"
                     class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-action="Display" asp-controller="Admin">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            List Contact Message
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <!-- Basic Tables start -->
    <section class="section">
        <div class="card">
            <div class="card-header">List Contact Message</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table" id="table1">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Content</th>
                                <th>PhoneNumber</th>
                                <th>InsuranceType</th>
                                <th>isUser</th>
                                <th>IsSend</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.Content</td>                                 
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.InsuranceType</td>
                                    <td>
                                        @if (@item.isUser == true)
                                        {
                                            <span>Yes</span>
                                        }
                                        else
                                        {
                                            <span>No</span>
                                        }
                                    </td>
                                    <td>
                                        @if (@item.isSent == true)
                                        {
                                            <span>Yes</span>
                                        }
                                        else
                                        {
                                            <span>No</span>
                                        }
                                    </td>
                                    <td>

                                        @if (@item.isSent == true)
                                        {
                                            <a asp-action="ViewSentEmail" asp-controller="Admin" class="badge bg-success" asp-route-id="@item.Id">View Email</a>
                                        }
                                        else
                                        {
                                            <a asp-action="SendEmail" asp-controller="Admin" class="badge bg-success" asp-route-id="@item.Id">Send Reply</a>
                                        }
                                       
                                
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <!-- Basic Tables end -->
</div>


